{
  "manifest_version": 3,
  "name": "Colonist Mini Explorer",
  "version": "0.0.1",
  "description": "Minimal content-script that reads Colonist chat lines and tallies simple 'got' resource events.",
  "icons": {
    "16": "data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAA4AAAAOCAYAAAAfSC3RAAAACXBIWXMAAAsSAAALEgHS3X78AAAAPUlEQVQoz2NgGAWjYBSMglEwCkYH0P//z0gkJgYjQGQYDNhGg2EwYg0E0mG4iCkGUZC0Q0jA2Q0wAAJw0JpD2zM1hAAAAAElFTkSuQmCC"
  },
  "host_permissions": ["*://colonist.io/*"],
  "content_scripts": [
    {
      "matches": ["*://colonist.io/*"],
      "js": ["explorer.js"],
      "run_at": "document_idle"
    }
  ]
}
